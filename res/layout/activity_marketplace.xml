<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MarketplaceActivity" >

    <SearchView
        android:id="@+id/svSearchMarketplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="8sp"
        android:contentDescription="@string/filter_searchbox_desc"
        android:iconifiedByDefault="false"
        android:queryHint="@string/searchview_query_hint"
        android:visibility="visible" >

    </SearchView>

    <ListView
        android:id="@+id/lvMarketplaceItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/svSearchMarketplace"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" >
    </ListView>

</RelativeLayout>
